generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(uuid())
  uid         String  @unique
  email       String  @unique
  displayName String?
  photoURL    String?
  role        String  @default("user")
  createdAt   DateTime @default(now())
}
